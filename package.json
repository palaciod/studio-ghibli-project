{
  "name": "yurt",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "test": "pnpm --filter backend test && pnpm --filter frontend test",
    "test:backend": "pnpm --filter backend test",
    "test:frontend": "pnpm --filter frontend test",
    "clean": "pnpm --filter backend clean && pnpm --filter frontend clean",
    "install:all": "pnpm install"
  },
  "keywords": [],
  "author": "",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lerna": "^8.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx,css,md}": "prettier --write"
  }
}
